<Project>

  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.props" />
  
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net452</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <AssemblyTitle>tailp</AssemblyTitle>
    <Product>tailp</Product>
    <Copyright>Copyright ©</Copyright>
    <Deterministic>false</Deterministic>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <LangVersion>default</LangVersion>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <CodeAnalysisRuleSet>tailp.ruleset</CodeAnalysisRuleSet>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.targets" />
  
  <PropertyGroup>
    <PreBuildEvent>
      %25ComSpec%25 /c "powershell.exe -Command "((Get-Date).ToUniversalTime()).ToString(\""yyyy-MM-dd HH:mm:ss UTC\"")" &gt; "$(ProjectDir)\Resources\BuildDate.txt"
    </PreBuildEvent>
    <PostBuildEvent>
      if $(ConfigurationName) == Release (
      del "$(TargetDir)tmp.exe"
      rename "$(TargetPath)" "tmp.exe"
      "%USERPROFILE%\.nuget\packages\ilmerge\3.0.40\tools\net452\ILMerge.exe" /ndebug /out:$(TargetFileName) "tmp.exe" "SharpCompress.dll"
      )
    </PostBuildEvent>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Net.Http" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Include="tailp.ruleset" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\help.txt" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Resources\BuildDate.txt" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ILMerge" Version="3.0.40" />
    <PackageReference Include="SharpCompress" Version="0.24.0" />
  </ItemGroup>
</Project>